/*----------------------------------------*\
  SHOPPING CARD
\*----------------------------------------*/

.shopping__card {
  @apply bg-white;
  container-type: inline-size;

  /* Flat */
  @apply py-4;
  @apply bg-transparent;
  @apply border-b border-ui-elements-inputfield-select-main-stroke;

  @screen lg {
    @apply flex;
  }
}

.shopping__card--edit {
  .shopping__card-amount-input {
    @apply mt-4;
  }
  @screen lg {
    .shopping__card-amount-input {
      @apply mt-0;
      @apply mr-2.5;
      @apply min-w-[150px] max-w-[150px];
    }
  }
}

.shopping__card__image {
  @apply relative;
  @apply h-[250px] w-full;

  @apply flex items-center justify-center;

  .shopping__card-image-background {
    @apply h-full w-full;
    @apply absolute z-30;
    @apply bg-background-accent-01 border-2 border-background-accent-01;
    @apply opacity-70;
  }

  img {
    @apply z-40;
    @apply max-w-[90%] max-h-[90%];
  }

  .image-not-available {
    @apply z-40;
  }

  @screen lg {
    @apply max-h-[168px] max-w-[168px];
  }
}

.shopping__card-details-container {
  @apply mt-2.5 mr-2.5;
  @apply w-full;
  @screen lg {
    @apply pl-5 pr-5;
    @apply mt-0 mr-0;
  }
}

.shopping__card-item-price {
  @apply mt-4;
}

.shopping__card-action-container {
  .shopping__card-price {
    @apply hidden;
    @screen lg {
      @apply block;
    }
  }
  @apply flex flex-col justify-between;
  @screen lg {
    @apply min-w-[130px] max-w-[130px];
  }
  @screen 3xl {
    @apply min-w-[150px] max-w-[150px];
  }
}

.shopping__card-price-mobile {
  @apply text--base;
  @apply mt-4;
  @apply font-bold;
  @apply block;
  @screen lg {
    @apply hidden;
  }
}

.shopping__card-price {
  @apply text--base;
  @apply text-right;
  @apply font-bold;
}

.shopping__card-action {
  @apply self-end;
  @apply mt-4;
  @apply text--base;

  @screen lg {
    @apply mt-0;
  }

  button {
    @apply !p-0;
  }
}

.shopping__card-amount {
  @apply mt-4;
}

.shopping__card-image-not-available {
  @apply mb-4;
  @apply z-40;
}
