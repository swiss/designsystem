/*----------------------------------------*\
  BREADCRUMB
\*----------------------------------------*/

.breadcrumb {
  @apply py-2 xl:py-3;
  @apply relative z-20;
  @apply text-sm text-text-new-label;
  @apply hidden lg:block;

  & nav {
    @apply -ml-4;
  }

  & > nav > ul {
    @apply flex flex-wrap;
  }

  & > nav > ul > li {
    @apply flex relative;
  }

  & > nav > ul > li > a {
    @apply flex items-center;
    @apply px-4 py-2;
    @apply md:py-4;
    @apply hover:text-action-main leading-tight transition-colors;

    &.clicked {
      @apply bg-background-breadcrumb shadow-2xl;
      @apply relative z-50;
      clip-path: inset(-50px -50px 0 -50px); /* crop shadow at the bottom */
    }

    & + ul {
      @apply hidden opacity-0;
      @apply transition-opacity duration-300;
    }

    &.clicked + ul {
      @apply block opacity-100;
    }
  }
}

.breadcrumb__dropdown-icon {
  @apply w-[1.25em] h-[1.25em];
  @apply ml-2;
  @apply text-action-main;
  @apply border border-action-main rounded-sm;
  @apply stroke-current;

  & path {
    @apply origin-center rotate-0;
    @apply transition-transform duration-300;

    .clicked & {
      @apply rotate-180;
    }
  }
}

.breadcrumb__include-icon {
  @apply -ml-5 mr-3;
  @apply transition-opacity duration-200;

  .clicked & {
    @apply opacity-0;
  }
}

.breadcrumb__dropdown-icon {
  @apply w-[1.25em] h-[1.25em];
  @apply ml-2;
  @apply text-action-main;
  @apply border border-action-main rounded-sm;
  @apply stroke-current;

  & path {
    @apply origin-center rotate-0;
    @apply transition-transform duration-300;

    .clicked & {
      @apply rotate-180;
    }
  }
}

/*----------------------------------------*\
  BREADCRUMB DRAWER
\*----------------------------------------*/

.breadcrumb ul ul {
  @apply w-[300px] p-2 mt-px;
  @apply absolute z-10 top-[3rem] left-0;
  @apply bg-background-breadcrumb shadow-2xl;

  li a {
    @apply menu__item menu__item--mini;
    @apply menu__item--border w-full;

    &:hover {
      @apply text-action-hover-main;
    }

    &.active::after {
      content: '';
      @apply block bg-action-darkmode-main-red;
      @apply w-[2px];
      @apply absolute top-0 bottom-0 left-0;
    }
  }
}
